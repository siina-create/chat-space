.main-chat-all{data: {message_id: message.id}}
  .main-chat-all__name
    = message.user.name
    .main-chat-all__time
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .main-chat-all__letter
    - if message.body.present?
      .lower-message__content
        = message.body
    - if message.image.present?
      .lower-message__image
        = image_tag message.image.url, class: 'lower-message__image' 