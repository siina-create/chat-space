.main
  .main-header
    .main-header__left
      =@group.name
      .main-header__left--member-list
        - @group.users.each do |user|
          = user.name
      = link_to edit_group_path(current_user),class: "edit" do
        .main-header__edit-btn
          Edit
  .main-chat
    = render partial: 'message', collection: @messages
  .main-form
    .form
      = form_for [@group, @message] do |f|
        = f.text_field :body,class:"input-textbox",placeholder: "text a message"
        %label.input-image
          = f.file_field :image,class:"imagechoice"
          = icon'fas', 'image'
        = f.submit"SEND",class:"input-send-btn"